{
  "name": "converter-react",
  "version": "0.0.1",
  "description": "Converter application (React)",
  "scripts": {
    "lint-client": "eslint --ext .js,.jsx -c .eslintrc-client client templates",
    "lint-client-test": "eslint --ext .js,.jsx -c .eslintrc-client-test test/client",
    "lint-server": "eslint -c .eslintrc-server server",
    "lint-server-test": "eslint -c .eslintrc-server-test test/server",
    "lint": "npm run lint-server && npm run lint-client && npm run lint-client-test && echo 'TODO lint server(20)/func(21) tests'",
    "test-frontend": "node node_modules/karma/bin/karma start karma.conf.js",
    "test-frontend-ci": "node node_modules/karma/bin/karma start --browsers PhantomJS,Firefox karma.conf.coverage.js",
    "test-frontend-cov": "node node_modules/karma/bin/karma start karma.conf.coverage.js",
    "test-frontend-dev": "node node_modules/karma/bin/karma start karma.conf.dev.js",
    "test": "npm run test-frontend && echo 'TODO implement server(20)/func(21) tests'",
    "test-ci": "npm run test-frontend-ci",
    "test-cov": "npm run test-frontend-cov",
    "test-dev": "npm run test-frontend-dev",
    "check": "npm run lint && npm run test",
    "check-ci": "npm run lint && npm run test-ci",
    "check-cov": "npm run lint && npm run test-cov",
    "check-dev": "npm run lint && npm run test-dev",
    "start": "node server/index.js",
    "server": "nodemon --watch client --watch server --watch templates --ext js,jsx server/index.js",
    "server-dev": "WEBPACK_DEV=true npm run server",
    "server-wps-dev": "webpack-dev-server --config webpack.config.dev.js --progress --colors --port 2992",
    "server-wps-hot": "webpack-dev-server --config webpack.config.hot.js --hot --progress --colors --port 2992 --inline",
    "server-wps-test": "webpack-dev-server --port 3001 --config webpack.config.test.js --colors",
    "sources": "http-server -p 3001 .",
    "watch": "webpack --watch --colors",
    "prod": "concurrent -kr 'npm run watch' 'npm run server' 'npm run sources'",
    "dev": "concurrent -kr 'npm run server-wps-test' 'npm run server-wps-dev' 'npm run server-dev'",
    "hot": "concurrent -kr 'npm run server-wps-test' 'npm run server-wps-hot' 'npm run server-dev'",
    "build": "webpack",
    "postinstall": "node heroku/scripts/not-heroku.js || (node heroku/scripts/install.js && npm run build)"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FormidableLabs/converter-react.git"
  },
  "keywords": [
    "react",
    "webpack",
    "babel",
    "example"
  ],
  "author": "Ryan Roemer <ryan.roemer@formidablelabs.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FormidableLabs/converter-react/issues"
  },
  "homepage": "https://github.com/FormidableLabs/converter-react",
  "dependencies": {
    "alt": "^0.17.1",
    "babel": "^5.8.19",
    "babel-core": "^5.8.19",
    "babel-loader": "^5.3.2",
    "babel-runtime": "^5.8.19",
    "bluebird": "^2.9.34",
    "clean-webpack-plugin": "^0.1.3",
    "compression": "^1.5.2",
    "express": "^4.13.1",
    "isomorphic-fetch": "^2.1.1",
    "react": "^0.13.3",
    "react-bootstrap": "^0.24.2",
    "webpack": "^1.10.5",
    "webpack-stats-plugin": "0.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^4.0.10",
    "chai": "^3.2.0",
    "concurrently": "^0.1.1",
    "coveralls": "^2.11.4",
    "eslint": "^1.2.1",
    "eslint-config-defaults": "^4.2.0",
    "eslint-plugin-filenames": "^0.1.2",
    "eslint-plugin-react": "^3.2.3",
    "http-server": "^0.8.0",
    "isparta-loader": "^0.2.0",
    "jade": "^1.11.0",
    "karma": "^0.13.9",
    "karma-chrome-launcher": "^0.2.0",
    "karma-coverage": "^0.5.0",
    "karma-firefox-launcher": "^0.1.6",
    "karma-ie-launcher": "^0.2.0",
    "karma-mocha": "^0.2.0",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-phantomjs-shim": "^1.1.1",
    "karma-safari-launcher": "^0.1.1",
    "karma-sauce-launcher": "^0.2.14",
    "karma-spec-reporter": "0.0.20",
    "karma-webpack": "^1.7.0",
    "lodash": "^3.10.1",
    "marked": "^0.3.4",
    "mocha": "^2.2.5",
    "nodemon": "^1.4.0",
    "phantomjs": "^1.9.18",
    "react-hot-loader": "^1.2.8",
    "recluster": "^0.4.0",
    "sinon": "^1.16.1",
    "sinon-chai": "^2.8.0",
    "webpack-dev-server": "^1.10.1"
  }
}
